<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.activityApp.intro.view.MainActivity">

    <Button
        android:id="@+id/btn_calibrate"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="initCalibrateActivity"
        android:text="data acquisition" />

    <Button
        android:id="@+id/btn_sync"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/btn_calibrate"
        android:layout_marginTop="8dp"
        android:onClick="initCalibrateActivity"
        android:text="Sync data" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_sync"
        android:layout_marginTop="20dp"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
